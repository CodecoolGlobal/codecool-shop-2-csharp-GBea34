<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - NomNomShop</title>

                    
                    
                    

                    


    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
<header>
    <script src="https://kit.fontawesome.com/80b60cbd38.js" crossorigin="anonymous"></script>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        
           
            
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">NomNomShop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                  <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
                        </li>
                        
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ViewCart">Cart</a>
                    </li>
                        <div class="dropdown">
                            <button class="dropbtn">
                                Categories
                                <i class="fa fa-caret-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Sweet">Sweet</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Sour">Sour</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Salty">Salty</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Spicy">Spicy</a>
                            </div>

                        </div>
                        
                        <li class="nav-item">
                        
                        <div class="dropdown">
                            <button class="dropbtn">
                                Suppliers
                                <i class="fa fa-caret-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Chio">Chio</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="CrikCrok">CrikCrok</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="EatReal">Eat Real</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Lays">Lays</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="fini">fini</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Manner">Manner</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Milka">Milka</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Mizo">Mizo</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Pocky">Pocky</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Snickers">Snickers</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="SourPatch">Sour Patch</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Toffifee">Toffifee</a>
                            </div>
                        </div>
                            <button class="navbar-item user" onclick="Login()" style="width:auto;">Login</button>
                    </li>
                </ul>
            </div>
        

        
    </nav>
</header>
<div class="container">


    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
    <div id="back"></div>
        <div class="logform" id="login">
            <div class="f">
        <span onclick="Exit()"
                    class="close" title="Close Modal">&times;</span>
            <span class="title">Login</span>

            <form action="/login" method="post">
                <div class="input-field">
                    <input class="i" type="email" placeholder="Enter your email" required>
                </div>
                <div class="input-field">
                    <input class="i" type="password" class="password" placeholder="Enter your password" required>
                    <i class="uil uil-eye-slash showHidePw"></i>
                </div>
                <div class="input-field button">
                    <input class="i" type="submit" value="Login">
                </div>
            </form>

            <div class="login-signup">
                <span class="text">
                    Not a member?
                <span onclick="Signup()">Signup Now</span>
                </span>
            </div>
            </div>
        </div>

        <!-- Registration Form -->
        <div class="logform" id="signup">
        <span onclick="Exit()"
                    class="close" title="Close Modal">&times;</span>
            <span class="title">Registration</span>

            <form action="#">
                <div class="input-field">
                <input class="i" type="text" placeholder="Enter your name" required>
                    <i class="uil uil-user"></i>
                </div>
                <div class="input-field">
                <input class="i" type="text" placeholder="Enter your email" required>
                    <i class="uil uil-envelope icon"></i>
                </div>
                <div class="input-field">
                <input class="i" type="password" class="password" placeholder="Create a password" required>
                    <i class="uil uil-lock icon"></i>
                </div>
                <div class="input-field">
                <input class="i" type="password" class="password" placeholder="Confirm password" required>
                    <i class="uil uil-lock icon"></i>
                    <i class="uil uil-eye-slash showHidePw"></i>
                </div>

                <div class="checkbox-text">
                    <div class="checkbox-content">
                    <input class="i" type="checkbox" id="termCon">
                    <label for="termCon" class="text">By checking this you accept our <a asp-area="" asp-controller="Product" asp-action="Privacy">Privacy policy</a></label>
                    </div>
                </div>

                <div class="input-field button">
                    <input class="i" type="button" value="Sign up">
                </div>
            </form>

            <div class="login-signup">
                <span class="text">
                    Already a member?
                <span onclick="Login()">Login Now</span>
                </span>
            </div>
        </div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - Codecool.CodecoolShop - <a asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>